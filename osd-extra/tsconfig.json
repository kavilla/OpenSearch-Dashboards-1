{
  "extends": "../tsconfig.base.json",
  "include": [
    "mocks.ts",
    "typings/**/*",
    "plugins/**/*",
    "test_utils/**/*",
    "tasks/**/*"
  ],
  "exclude": [
    "test/**/*",
  ],
  "compilerOptions": {
    "paths": {
      "opensearch-dashboards/public": ["src/core/public"],
      "opensearch-dashboards/server": ["src/core/server"],
      "fixtures/*": ["src/fixtures/*"]
    },
    // overhead is too significant
    "incremental": false
  },
  "references": [
    { "path": "../src/core/tsconfig.json" },
    { "path": "../src/plugins/opensearch_dashboards_utils/tsconfig.json" },
    { "path": "../src/plugins/opensearch_dashboards_react/tsconfig.json" },
  ]
}
